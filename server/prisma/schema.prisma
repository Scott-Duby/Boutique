generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bin {
  id      Int     @id @default(autoincrement())
  name    String  @db.VarChar(256)
  is_full Boolean @default(false)
  items Item[]
}

model Item {
  id     Int     @id @default(autoincrement())
  name   String  @db.VarChar(256)
  sold   Boolean @default(false)
  color  String @default("NONE")  @db.VarChar(256) // default color is NONE this is a feature being implemented in v2
  web_url String @default("https://poshmark.com") @db.VarChar(256) // this is a feature being implemented in v2
  bin   Bin? @relation(fields: [bin_id], references: [id], onDelete: SetNull)
  bin_id Int?
}
