{
  "name": "boutique",
  "productName": "Boutique",
  "private": true,
  "author": "Scott Duby",
  "description": "Poshmark Inventory Manager",
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "start": "electron-forge start",
    "build": "vite build",
    "start:prod": "npm run build && electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "release": "yarn build && electron-builder"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-accordion": "^1.2.8",
    "@radix-ui/react-checkbox": "^1.1.5",
    "@radix-ui/react-context-menu": "^2.2.14",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.0.17",
    "@tanstack/react-form": "^1.2.4",
    "@tanstack/react-query": "^5.70.0",
    "@tanstack/react-router": "^1.120.5",
    "@tanstack/react-router-devtools": "^1.120.6",
    "@tanstack/react-table": "^8.21.2",
    "@types/react-table": "^7.7.20",
    "autoprefixer": "^10.4.21",
    "axios": "^1.8.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "8.1.0",
    "lucide-react": "^0.511.0",
    "next-themes": "^0.4.6",
    "random-hex-color": "^1.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.55.0",
    "recharts": "^2.15.3",
    "serve": "^14.2.4",
    "shortid": "^2.2.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.0.17",
    "tw-animate-css": "^1.3.0",
    "vaul": "^1.1.2",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@eslint/js": "^9.21.0",
    "@tanstack/router-plugin": "^1.120.5",
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "dotenv": "^16.5.0",
    "electron": "^31.0.1",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "postcss": "^8.4.38",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "boutique_app",
            "setupExe": "BoutiqueSetup.exe",
            "setupIcon": "src/assets/source.ico"
          }
        }
      ]
    }
  },
  "build": {
    "appId": "com.scoot.boutique",
    "win": {
      "target": "nsis",
      "icon": "src/assets/source.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Boutique",
      "artifactName": "Boutique Setup.${ext}"
    },
    "files": [
      "electron/**/*",          
      "dist/**/*",        
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}
